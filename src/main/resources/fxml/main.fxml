<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootLayout" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="450.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.controller.MainController">
  <top>
    <MenuBar BorderPane.alignment="CENTER">
      <menus>
        <Menu mnemonicParsing="false" text="%file">
          <items>
            <MenuItem fx:id="settingsMenuItem" mnemonicParsing="false" text="%settings"/>
            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="%exit"/>
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="%help">
          <items>
            <Menu mnemonicParsing="false" text="%documentation">
              <items>
                <MenuItem fx:id="docFFmpegMenuItem" mnemonicParsing="false" text="ffmpeg"/>
                <MenuItem fx:id="docFFplayMenuItem" mnemonicParsing="false" text="ffplay"/>
              </items>
            </Menu>
            <MenuItem fx:id="examplesMenuItem" mnemonicParsing="false" text="%examples"/>
            <MenuItem fx:id="aboutButton" mnemonicParsing="false" text="%about"/>
          </items>
        </Menu>
      </menus>
    </MenuBar>
  </top>
  <center>
    <TabPane tabClosingPolicy="UNAVAILABLE" tabMaxHeight="200.0" tabMaxWidth="200.0" BorderPane.alignment="CENTER">
      <tabs>
        <Tab text="%main">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0">
              <children>
                <TableView fx:id="taskTable" layoutX="15.0" layoutY="85.0" prefHeight="300.0"
                           prefWidth="540.0">
                  <columns>
                    <TableColumn fx:id="filenameColumn" maxWidth="500.0" prefWidth="368.0"
                                 text="%filename"/>
                    <TableColumn fx:id="statusColumn" maxWidth="150.0" prefWidth="85.0"
                                 style="-fx-alignment: CENTER;" text="%status"/>
                    <TableColumn fx:id="timeColumn" maxWidth="150.0" prefWidth="85.0"
                                 style="-fx-alignment: CENTER;" text="%time"/>
                  </columns>
                </TableView>
                <Button fx:id="startButton" layoutX="565.0" layoutY="225.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="125.0" text="%start">
                  <tooltip>
                    <Tooltip text="%start_selected_tasks">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <TextField fx:id="paramField" layoutX="305.0" layoutY="7.0" prefHeight="25.0"
                           prefWidth="435.0"/>
                <Button fx:id="stopAllButton" layoutX="565.0" layoutY="260.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="175.0" text="%cancel_all_tasks">
                  <tooltip>
                    <Tooltip text="%cancel_all_tasks">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="addFilesButton" layoutX="565.0" layoutY="85.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="175.0" text="%add_source_files">
                  <tooltip>
                    <Tooltip text="%add_source_files_to_the_task_table">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="removeFilesButton" layoutX="565.0" layoutY="155.0"
                        mnemonicParsing="false" prefHeight="25.0" prefWidth="125.0" text="%clear_tasks">
                  <tooltip>
                    <Tooltip text="%clear_selected_tasks">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="removeAllFilesButton" layoutX="695.0" layoutY="155.0"
                        mnemonicParsing="false" prefHeight="25.0" prefWidth="45.0" text="%all">
                  <tooltip>
                    <Tooltip text="%clear_all_tasks">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="startAllButton" layoutX="695.0" layoutY="225.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="45.0" text="%all">
                  <tooltip>
                    <Tooltip text="%start_all_tasks">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="clearCompletedButton" layoutX="565.0" layoutY="190.0"
                        mnemonicParsing="false" prefHeight="25.0" prefWidth="175.0"
                        text="%clear_completed">
                  <tooltip>
                    <Tooltip text="%clear_completed_tasks">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Label layoutX="225.0" layoutY="3.0" prefWidth="80.0" text="%parameters"
                       wrapText="true"/>
                <Label layoutX="565.0" layoutY="35.0" prefWidth="110.0" text="%output_file_extension"
                       wrapText="true"/>
                <ChoiceBox fx:id="outputFileExtensionChoiceBox" layoutX="680.0" layoutY="42.0"
                           prefHeight="25.0" prefWidth="60.0"/>
                <Label layoutX="15.0" layoutY="65.0" text="%task_list"/>
                <Button fx:id="openFolderButton" layoutX="565.0" layoutY="120.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="175.0" text="%open_folder"/>
                <Button fx:id="playButton480" layoutX="565.0" layoutY="295.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="125.0" text="%play">
                  <tooltip>
                    <Tooltip text="%play_file_with_displayed_height_480">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="playButton720" layoutX="695.0" layoutY="295.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="45.0" text="720">
                  <tooltip>
                    <Tooltip text="%play_file_with_displayed_height_720">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <Button fx:id="deleteSelectedFilesToTrashButton" layoutX="565.0" layoutY="330.0"
                        mnemonicParsing="false" prefHeight="25.0" prefWidth="175.0"
                        text="%delete_files_to_trash">
                  <tooltip>
                    <Tooltip text="%delete_selected_files_to_trash">
                      <font>
                        <Font size="14.0"/>
                      </font>
                    </Tooltip>
                  </tooltip>
                </Button>
                <MenuButton layoutX="470.0" layoutY="42.0" mnemonicParsing="false" prefHeight="25.0"
                            prefWidth="85.0" text="%presets">
                  <items>
                    <Menu mnemonicParsing="false" text="H264">
                      <items>
                        <MenuItem fx:id="libx264MenuItem" mnemonicParsing="false"
                                  text="-c:v libx264"/>
                      </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="H265">
                      <items>
                        <MenuItem fx:id="libx265MenuItem" mnemonicParsing="false"
                                  text="-c:v libx265"/>
                      </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="other">
                      <items>
                        <MenuItem fx:id="copyMenuItem" mnemonicParsing="false" text="-c copy"/>
                      </items>
                    </Menu>
                  </items>
                </MenuButton>
                <TextField fx:id="beforeInputField" layoutX="110.0" layoutY="7.0" prefHeight="25.0"
                           prefWidth="100.0"/>
                <Label layoutX="15.0" layoutY="3.0" prefWidth="80.0" text="%special_parameters"
                       wrapText="true"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="%log">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <TextArea fx:id="logTextArea" editable="false" layoutX="10.0" layoutY="10.0"
                          prefHeight="350.0" prefWidth="705.0"/>
                <Button fx:id="clearLogButton" layoutX="10.0" layoutY="365.0" mnemonicParsing="false"
                        prefWidth="130.0" text="%clear_log"/>
                <Button fx:id="copyToFile" layoutX="150.0" layoutY="365.0" mnemonicParsing="false"
                        prefWidth="130.0" text="%copy_to_file"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </center>
</BorderPane>
